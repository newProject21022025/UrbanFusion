{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",          // Оновлено до ES2022
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,       // Змінити на true для кращої типізації
    "strict": true,              // Додати strict режим
    "strictBindCallApply": true, // Увімкнути для безпеки
    "esModuleInterop": true,     // Додати для кращої сумісності
    "moduleResolution": "node",  // Явно вказати
    "types": ["node", "jest"]    // Додати глобальні типи
  },
  "exclude": ["node_modules", "dist"]
}


